<odoo>
    <data>

        <!-- Vista del Wizard -->
        <record id="view_account_move_confirm_wizard" model="ir.ui.view">
            <field name="name">account.move.confirm.wizard.form</field>
            <field name="model">account.move.confirm.wizard</field>
            <field name="arch" type="xml">
                <form string="Confirmar Validación">
                    <div>
                <p>Esta cargando una factura para la empresa <strong><field name="company_id" readonly="1" /></strong>, si es correcto oprima De acuerdo.</p>
                <p>Por favor, verifique que todos los datos sean correctos.</p>
                <p><strong>Empresa: <field name="company_id" readonly="1"/></strong></p>
            </div>
                    <footer>
                        <button name="action_confirm" type="object" string="Sí, Confirmar" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Acción para abrir el Wizard -->
        <record id="action_account_move_confirm_wizard" model="ir.actions.act_window">
            <field name="name">Confirmar Asiento</field>
            <field name="res_model">account.move.confirm.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_view_types">form</field>
        </record>

    </data>
</odoo>